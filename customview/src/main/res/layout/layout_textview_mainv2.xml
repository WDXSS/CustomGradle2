<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/spannable_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/comparison"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/spannable_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/comparison"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/spannable_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/comparison"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/comparison"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_comparison"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#22999999"
                android:padding="12dp"
                android:text="@string/poem_0"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/realtv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="@string/effect"
                android:textSize="14dp" />

            <com.example.customview.view.ExpandableTextView
                android:id="@+id/etv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginBottom="32dp"
                android:background="#22999999"
                android:padding="12dp"
                android:text="@string/poem_0"
                android:textSize="12dp"
                />

            <Button
                android:id="@+id/button_to_list_view"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="check in ListView"
                android:textAllCaps="false"
                android:textColor="#88000000" />

            <Button
                android:id="@+id/button_update_text"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="4dp"
                android:text="update ExpandableTextView"
                android:textAllCaps="false"
                android:textColor="#88000000" />

            <TextView
                android:id="@+id/test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="etv_EllipsisHint 结束 添加默认 .."
                android:textSize="14dp" />

            <com.example.customview.view.ExpandableTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:background="#22999999"
                android:padding="12dp"
                android:text="@string/poem_0"
                android:textSize="12dp"
                app:etv_EllipsisHint="--!!结束 --" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="etv_EnableToggle 单击切换状态 默认是true"
                android:textSize="14dp" />

            <com.example.customview.view.ExpandableTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:background="#22999999"
                android:padding="12dp"
                android:text="@string/poem_0"
                android:textSize="12dp"
                app:etv_EnableToggle="false" />

            <com.example.customview.view.ExpandableTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:background="#22999999"
                android:padding="12dp"
                android:text="@string/poem_0"
                android:textSize="12dp"
                app:etv_EnableToggle="false"
                app:etv_ToExpandHint="   更多    "
                app:etv_ToExpandHintColor="#FF5722"
                app:etv_ToExpandHintColorBgPressed="#FF5722"
                app:etv_ToExpandHintUnderLineShow="true"
                app:etv_ToShrinkHint="   收起    "
                app:etv_ToShrinkHintUnderLineShow="true"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="etv_GapToExpandHint= FF5722 "
                android:textSize="14dp" />

            <com.example.customview.view.ExpandableTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:background="#22999999"
                android:padding="12dp"
                android:text="@string/poem_0"
                android:textSize="12dp"
                app:etv_EnableToggle="false"
                app:etv_GapToExpandHint="FF5722"
                app:etv_ToExpandHintColor="#FF5722" />

            <com.example.customview.view.ExpandableTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:background="#22999999"
                android:padding="12dp"
                android:text="@string/poem_0"
                android:textSize="12dp"
                app:etv_MaxLinesOnShrink="4"
                app:etv_ToExpandHint="更多"
                app:etv_ToExpandHintColor="#FF5722"
                app:etv_ToExpandHintColorBgPressed="#0B4C0E"
                app:etv_ToExpandHintUnderLineShow="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="测试点击"
                />
            <com.example.customview.view.ExpandableTextView
                android:id="@+id/expand_click"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:background="#22999999"
                android:padding="12dp"
                android:text="@string/poem_0"
                android:textSize="12dp"
                app:etv_EnableToggle="false"
                app:etv_MaxLinesOnShrink="4"
                app:etv_ToExpandHint=""
                app:etv_ToExpandHintColor="#FF5722"
                app:etv_ToExpandHintColorBgPressed="#0B4C0E"
                app:etv_ToExpandHintUnderLineShow="false" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>