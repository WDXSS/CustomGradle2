<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="._12kotlin.MaterialDesignMainActivity">

    <Button
        style="@style/btn_flag"
        android:text="Actionbar 显示默认的"
        android:textAllCaps="false"
        android:onClick="startToolbarActivity" />

    <Button
        android:id="@+id/Toolbar"
        style="@style/btn_flag"
        android:text="设置Toolbar "
        android:textAllCaps="false" />
    <Button
        android:id="@+id/toolbar3"
        style="@style/btn_flag"
        android:text="Toolbar 配合 AppBarLayout "
        android:textAllCaps="false" />
    <Button
        android:id="@+id/DrawerLayout"
        style="@style/btn_flag"
        android:text="DrawerLayout 滑动菜单 "
        android:textAllCaps="false" />
    <Button
        android:id="@+id/NavigationView"
        style="@style/btn_flag"
        android:text="NavigationView 的用法 "
        android:textAllCaps="false" />
    <Button
        android:id="@+id/NavigationView2"
        style="@style/btn_flag"
        android:text="NavigationView 的用法 使用 CoordinatorLayout  "
        android:textAllCaps="false" />
    <Button
        android:id="@+id/materialCardView"
        style="@style/btn_flag"
        android:text="MaterialCardView的用法配合RecycleView"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/materialCardView2"
        style="@style/btn_flag"
        android:text="RecycleView 配合 AppBarLayout"
        android:textAllCaps="false" />
    <Button
        android:id="@+id/swipeRefresh"
        style="@style/btn_flag"
        android:text="RecycleView 下拉刷新"
        android:textAllCaps="false" />
</LinearLayout>