<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        style="@style/btn_flag"
        android:textAllCaps="false"
        android:text="retrofit 请求"
        android:id="@+id/OkHttpRequest"/>
    <Button
        android:id="@+id/RetrofitRequest"
        style="@style/btn_flag"
        android:textAllCaps="false"
        android:text="retrofit 简化 service 方法请求"
        />
    <Button
        style="@style/btn_flag"
        android:textAllCaps="false"
        android:text="通过 suspendCoroutine 函数 簡化回调"
        android:id="@+id/SuspendCoroutine"
        />
    <TextView
        android:id="@+id/ResponseText"
        style="@style/text_content"
        />
</LinearLayout>